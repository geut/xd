{
  "name": "@geut/xd",
  "version": "1.3.1",
  "description": "Run your lint and formatter in a single fast daemon.",
  "main": "index.js",
  "bin": {
    "xd": "./bin/xd.js",
    "xd-prettier": "./bin/xd-prettier.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "jest --passWithNoTests --verbose --runInBand",
    "posttest": "npm run lint",
    "lint": "eslint \"**/*.js\"",
    "version": "chan release --allow-yanked ${npm_package_version} && git add .",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "babel-eslint": "^10.0.3",
    "core_d": "^1.0.1",
    "eslint": "^6.5.1",
    "eslint-plugin-prettierx": "^0.4.0",
    "nanolru": "^1.0.0",
    "optionator": "^0.8.2",
    "prettierx": "^0.7.1",
    "resolve": "^1.12.0"
  },
  "devDependencies": {
    "@geut/chan": "^2.0.0",
    "cpy": "^7.3.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.8.0",
    "p-wait-for": "^3.1.0",
    "temp-dir": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./tests/setup.js",
    "globalTeardown": "./tests/teardown.js",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geut/xd.git"
  },
  "keywords": [
    "create",
    "geut",
    "module"
  ],
  "author": {
    "name": "GEUT",
    "email": "contact@geutstudio.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geut/xd/issues"
  },
  "homepage": "https://github.com/geut/xd#readme",
  "publishConfig": {
    "access": "public"
  }
}
